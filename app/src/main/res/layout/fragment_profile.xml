<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <View
        android:id="@+id/backLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBlack" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_semi_round_down"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:src="@color/lightGrey"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <ImageButton
            android:id="@+id/editImageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="-35dp"
            android:layout_toLeftOf="@id/profile_image"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="10dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/camera"
            android:tint="@color/white" />

        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="25dp"
            android:background="?android:attr/listDivider" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/divider12"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/saveUserName"
            android:background="@color/transparent"
            android:drawableStart="@drawable/user"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:focusable="false"
            android:gravity="center_vertical|start"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/editUserName"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/divider12"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/edit"
            android:tint="@color/Grey" />

        <View
            android:id="@+id/divider15"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/userName"
            android:background="?android:attr/listDivider" />

        <EditText
            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/divider15"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/editBirthDate"
            android:background="@color/transparent"
            android:clickable="true"
            android:drawableStart="@drawable/gift"
            android:drawableLeft="@drawable/gift"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:editable="false"
            android:focusable="false"
            android:gravity="center_vertical|start"
            android:hint="@string/age"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/editBirthDate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/divider15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/edit"
            android:tint="@color/Grey" />

        <View
            android:id="@+id/divider16"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/birthDate"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider18"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/divider16"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider18">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/password"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:text="@string/change_password"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/left_arrow"
                android:tint="@color/Grey" />

        </RelativeLayout>

        <View
            android:id="@+id/divider17"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/changePasswordButton"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/saveUserName"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@id/divider12"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:text="@string/save"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="invisible" />

